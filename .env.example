# Ollama config
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_EMBED_MODEL=nomic-embed-text
OLLAMA_CHAT_MODEL=llama3.1:8b

# Brave Search API key
BRAVE_API_KEY=your_brave_api_key_here

# Paths and DB
TOM_KNOWLEDGE_DIR=.
VECTOR_DB_PATH=memory/tom_brain.sqlite
RUNTIME_DB_PATH=memory/tom_runtime.sqlite
WEB_CACHE_DIR=memory/web

# Local HTTP API
TOM_API_ENABLED=true
TOM_API_HOST=127.0.0.1
TOM_API_PORT=8787
# Optional bearer token shared by your AI family apps
TOM_API_TOKEN=

# Cron schedule (default: every 6 hours)
TOM_CRON_SCHEDULE=0 */6 * * *

# whoiam living-document sync cron (default: every 6 hours at minute 15)
WHOIAM_SYNC_ENABLED=true
WHOIAM_SYNC_SCHEDULE=15 */6 * * *
WHOIAM_DOC_PATH=.tom-workspace/whoiam.md
WHOIAM_SYNC_STATE_PATH=memory/whoiam-sync-state.json
# Pipe-separated workspace-relative files to watch for architecture/logic changes
WHOIAM_SYNC_WATCH_FILES=src/index.ts|src/core/config.ts|src/core/brain.ts|src/integrations/knowledgeLoader.ts|src/integrations/vectorStore.ts|src/api/httpServer.ts|src/jobs/cycleJob.ts|src/jobs/githubSyncJob.ts|src/integrations/githubReportSync.ts|package.json|README.md

# GitHub report sync cron (default: every 4 hours)
GITHUB_SYNC_ENABLED=true
GITHUB_SYNC_SCHEDULE=0 */4 * * *
GITHUB_SYNC_OWNER=RobbyMo81
GITHUB_SYNC_REPO=ToM
GITHUB_API_BASE_URL=https://api.github.com
GITHUB_SYNC_OUTPUT_FILE=automation/github-report.md
GITHUB_SYNC_REINDEX=true
# Optional token for higher rate limits/private repos
GITHUB_TOKEN=

# HITL override token integrity keys (base64 32-byte secret recommended)
TOM_OVERRIDE_HMAC_KEY_ID=oxide-local-override-key
TOM_OVERRIDE_HMAC_KEY_B64=

# Web enrichment controls
WEB_ENRICHMENT_ENABLED=true
WEB_ENRICHMENT_QUERIES=latest devops hardening practices|local ai agent architecture patterns
WEB_ENRICHMENT_TOP_K=5

# Retrieval controls
SEARCH_DEFAULT_TOP_K=8
GENERATE_MAX_CONTEXT_CHARS=8000
GENERATE_MAX_RESPONSE_TOKENS=600
GENERATE_TEMPERATURE=0.2
GENERATE_SYSTEM_PROMPT=You are ToM Brain. Ground your answer in retrieved context and acknowledge uncertainty when context is missing.
CHUNK_MAX_CHARS=1200
CHUNK_OVERLAP_CHARS=200
